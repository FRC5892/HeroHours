{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HeroHours",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    },
    {
      "name": "Django: Run Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "justMyCode": true,
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    },
    {
      "name": "Django: Run Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test", "--verbosity=2"],
      "django": true,
      "justMyCode": false,
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    },
    {
      "name": "Django: Shell",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["shell"],
      "django": true,
      "console": "integratedTerminal",
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    }
  ]
}